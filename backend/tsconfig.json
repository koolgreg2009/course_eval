{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,               // required for breakpoint debugging
    "baseUrl": ".",                  // optional, for easier import paths
    "outDir": "./dist",                 // optional if using tsc
    "rootDir": "./src"
  },
  "include": ["src/**/*.ts"],        // or whatever your source folder is
  "exclude": ["node_modules"]
}
